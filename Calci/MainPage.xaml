<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calci.MainPage">

    <Grid Padding="5,0" RowSpacing="1" ColumnSpacing="1" BackgroundColor="Black">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="result" FontSize="40" FontAttributes="Bold" BackgroundColor="DarkSlateGray" Text="0" 
               TextColor="White" HorizontalTextAlignment="End" VerticalTextAlignment="Center" 
               LineBreakMode="NoWrap" Grid.ColumnSpan="4"/>


        <Button Text="CLEAR" FontSize="34" FontAttributes="Bold" BackgroundColor="CadetBlue"
                TextColor="White" Grid.ColumnSpan="4" Grid.Row="1" Clicked="Clear_Clicked"/>
        
        <Button Text="(" Grid.Row="2" Grid.Column="0" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Button_Clicked"/>
        <Button Text=")" Grid.Row="2" Grid.Column="1" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Button_Clicked"/>
        <Button Text="%" Grid.Row="2" Grid.Column="2" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Operator_Clicked"/>
        <Button x:Name="delete" Text="⌂" Grid.Row="2" Grid.Column="3" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Delete_Clicked"/>

        <Button Text="7" Grid.Row="3" Grid.Column="0" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="8" Grid.Row="3" Grid.Column="1" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="9" Grid.Row="3" Grid.Column="2" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="÷" Grid.Row="3" Grid.Column="3" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray"  Clicked="Operator_Clicked"/>

        <Button Text="4" Grid.Row="4" Grid.Column="0" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="5" Grid.Row="4" Grid.Column="1" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="6" Grid.Row="4" Grid.Column="2" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="×" Grid.Row="4" Grid.Column="3" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Operator_Clicked"/>

        <Button Text="1" Grid.Row="5" Grid.Column="0" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="2" Grid.Row="5" Grid.Column="1" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="3" Grid.Row="5" Grid.Column="2" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="-" Grid.Row="5" Grid.Column="3" BackgroundColor="Aqua" TextColor="Black" FontSize="34"
                BorderColor="Gray" Clicked="Operator_Clicked"/>

        <Button Text="0" Grid.Row="6" Grid.Column="0" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="." Grid.Row="6" Grid.Column="1" BackgroundColor="Black" TextColor="White" FontSize="32"
                BorderColor="Black" Clicked="Button_Clicked"/>
        <Button Text="=" Grid.Row="6" Grid.Column="2" BackgroundColor="Orange" TextColor="Black" FontSize="32"
                BorderColor="Black" Clicked="Calculate_Clicked"/>
        <Button Text="+" Grid.Row="6" Grid.Column="3" BackgroundColor="Aqua" TextColor="Black" FontSize="36"
                BorderColor="Black" Clicked="Operator_Clicked"/>


    </Grid>

</ContentPage>
